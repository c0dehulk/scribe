{
    "name": "codehulk/scribe",
    "description": "A documentation generator for packages.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Piper",
            "email": "id+git@codehulk.co.uk"
        }
    ],
    "minimum-stability": "stable",
    "bin": [
        "bin/scribe.php"
    ],
    "autoload": {
        "psr-4": {
            "Codehulk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Codehulk\\": "tests/unit/"
        }
    },
    "require": {
        "codehulk/package-tools": "^0.1",
        "php": "^7.0",
        "php-di/php-di": ">=5.0 <7.0",
        "symfony/console": ">=2.0 <5.0",
        "symfony/filesystem": ">=2.0 <5.0",
        "twig/twig": ">=2.0 <4.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.0 <8.0"
    }
}
